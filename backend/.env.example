# ================================
# AstroSource Pro - Configuration Environnement
# ================================
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Configuration API
API_HOST=localhost
API_PORT=8000
API_DEBUG=True
FRONTEND_URL=http://localhost:5174

# Configuration WebSocket
WS_HOST=localhost
WS_PORT=8001

# Configuration de sécurité
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuration des logs
LOG_LEVEL=INFO

# Configuration OpenAI (optionnel)
OPENAI_API_KEY=your-openai-api-key-here

# Configuration base de données (futur)
# DATABASE_URL=sqlite:///./astrosource.db

# Configuration cache (futur)
# REDIS_URL=redis://localhost:6379

# Configuration email (futur)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-password

# Configuration déploiement
ENVIRONMENT=development
